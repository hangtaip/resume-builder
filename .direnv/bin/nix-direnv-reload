#!/usr/bin/env bash
set -e
if [[ ! -d "/mnt/wsl/PHYSICALDRIVE0p1/farid/projects/resume-builder" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/mnt/wsl/PHYSICALDRIVE0p1/farid/projects/resume-builder")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/mnt/wsl/PHYSICALDRIVE0p1/farid/projects/resume-builder" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/mnt/wsl/PHYSICALDRIVE0p1/farid/projects/resume-builder/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/mnt/wsl/PHYSICALDRIVE0p1/farid/projects/resume-builder/.envrc" "/mnt/wsl/PHYSICALDRIVE0p1/farid/projects/resume-builder/.direnv"/*.rc
